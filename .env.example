# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=streamystats

# Optional: Version and build information (set automatically in CI/CD)
VERSION=latest
COMMIT_SHA=unknown
BUILD_TIME=unknown

# Application Configuration
NODE_ENV=production
PORT=3000
# Session signing secret (required for production)
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# Next.js server actions encryption key (required for production)
# Without this, the key rotates on each build, breaking active sessions on redeploy.
# Generate with: openssl rand -hex 16
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=
